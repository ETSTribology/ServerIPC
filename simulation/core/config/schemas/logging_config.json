{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Logging Configuration",
    "description": "Configuration schema for logging settings in the simulation framework",
    "properties": {
        "log_level": {
            "type": "string",
            "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
            "default": "INFO"
        },
        "log_format": {
            "type": "string",
            "description": "Format of log messages",
            "default": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "log_file": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "path": {
                    "type": "string",
                    "default": "logs/simulation.log"
                },
                "max_size_mb": {
                    "type": "number",
                    "default": 10
                },
                "backup_count": {
                    "type": "integer",
                    "default": 5
                }
            }
        },
        "console_logging": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true
                },
                "color_enabled": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "performance_logging": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
                },
                "interval_seconds": {
                    "type": "number",
                    "default": 60
                }
            }
        }
    },
    "required": ["log_level"]
}

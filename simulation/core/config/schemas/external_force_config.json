{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "External force applied to the mesh",
    "properties": {
        "direction": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 3,
            "maxItems": 3,
            "description": "Direction vector of the force"
        },
        "magnitude": {
            "type": "number",
            "description": "Magnitude of the force"
        }
    },
    "required": ["direction", "magnitude"],
    "additionalProperties": false
}

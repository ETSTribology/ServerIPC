{
    "name": "Sample Simulation",
    "version": "1.0.0",
    "inputs": [
        {
            "path": "meshes/model.obj",
            "percent_fixed": 10.0,
            "material": "steel",
            "transform": {
                "scale": [1.0, 1.0, 1.0],
                "rotation": [0.0, 0.0, 0.0, 1.0],
                "translation": [0.0, 0.0, 0.0]
            },
            "force": {
                "gravity": 9.81,
                "external_forces": [
                    {
                        "direction": [1.0, 0.0, 0.0],
                        "magnitude": 100.0
                    },
                    {
                        "direction": [0.0, 1.0, 0.0],
                        "magnitude": 50.0
                    }
                ]
            }
        }
    ],
    "materials": [
        {
            "name": "steel",
            "type": "elastic",
            "density": 7850.0,
            "young_modulus": 200000000000.0,
            "poisson_ratio": 0.3,
            "color": [150, 150, 150, 255]
        },
        {
            "name": "rubber",
            "type": "viscoelastic",
            "density": 1100.0,
            "young_modulus": 0.01,
            "poisson_ratio": 0.49,
            "color": [0, 0, 0, 255]
        }
    ],
    "simulation": {
        "type": "dynamic",
        "time_step": 0.01,
        "total_time": 5.0,
        "collision_detection": {
            "method": "ipc",
            "dhat": 0.001
        }
    },
    "optimization": {
        "solver": "newton",
        "max_iterations": 500,
        "convergence_tolerance": 1e-6
    },
    "compute": {
        "backend": "cuda",
        "precision": "double",
        "device_id": 0,
        "num_threads": 8
    },
    "logging": {
        "level": "INFO",
        "output": {
            "console": true,
            "file": {
                "enabled": true,
                "path": "logs/simulation.log",
                "max_size_mb": 50
            },
            "tensorboard": {
                "enabled": true,
                "log_dir": "logs/tensorboard"
            }
        }
    }
}

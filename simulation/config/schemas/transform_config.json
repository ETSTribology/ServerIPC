{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Transformation Configuration",
    "description": "Configuration schema for geometric transformations in simulation",
    "properties": {
        "scale": {
            "type": ["number", "array"],
            "description": "Scaling factor. Can be a single number or a 3D vector",
            "default": 1.0,
            "items": {
                "type": "number",
                "minimum": 0
            }
        },
        "rotation": {
            "type": "object",
            "description": "Rotation configuration",
            "properties": {
                "angle": {
                    "type": "number",
                    "description": "Rotation angle in degrees",
                    "default": 0
                },
                "axis": {
                    "type": "array",
                    "description": "Rotation axis vector",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 3,
                    "maxItems": 3,
                    "default": [0, 0, 1]
                }
            }
        },
        "translation": {
            "type": "array",
            "description": "Translation vector",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        },
        "pivot": {
            "type": "array",
            "description": "Pivot point for transformation",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        }
    },
    "additionalProperties": false
}

{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PostgreSQL Database Configuration",
    "type": "object",
    "version": "1.0.0",
    "description": "Configuration for PostgreSQL database connection",
    "required": ["host", "port", "db", "user", "password"],
    "properties": {
        "host": {
            "type": "string",
            "description": "Database server hostname",
            "default": "localhost"
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535,
            "description": "Database server port",
            "default": 5432
        },
        "db": {
            "type": "string",
            "description": "Database name",
            "minLength": 1
        },
        "schema": {
            "type": "string",
            "description": "Database schema",
            "default": "public"
        },
        "user": {
            "type": "string",
            "description": "Database user",
            "minLength": 1
        },
        "password": {
            "type": "string",
            "description": "Database password"
        },
        "pool": {
            "type": "object",
            "properties": {
                "min": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 1,
                    "description": "Minimum number of connections in pool"
                },
                "max": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 10,
                    "description": "Maximum number of connections in pool"
                },
                "idle_timeout": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 10000,
                    "description": "Connection idle timeout in milliseconds"
                }
            },
            "additionalProperties": false
        },
        "ssl": {
            "type": "object",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": ["disable", "allow", "prefer", "require", "verify-ca", "verify-full"],
                    "default": "disable",
                    "description": "PostgreSQL SSL mode"
                },
                "ca": {
                    "type": "string",
                    "description": "Path to CA certificate file"
                },
                "cert": {
                    "type": "string",
                    "description": "Path to client certificate file"
                },
                "key": {
                    "type": "string",
                    "description": "Path to client key file"
                }
            },
            "additionalProperties": false
        },
        "application_name": {
            "type": "string",
            "description": "Application name for PostgreSQL stats",
            "default": "simulation"
        }
    },
    "additionalProperties": false
}
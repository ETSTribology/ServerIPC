{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ServerIPC Simulation Configuration Schema",
    "type": "object",
    "description": "Comprehensive configuration schema for ServerIPC simulation framework",
    "properties": {
        "name": {
            "type": "string",
            "description": "Unique identifier for the simulation configuration",
            "minLength": 1,
            "maxLength": 100
        },
        "version": {
            "type": "string",
            "description": "Configuration version for tracking and compatibility",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "inputs": {
            "type": "array",
            "minItems": 1,
            "description": "List of input meshes and their associated configurations",
            "items": {
                "$ref": "input_mesh_config.json"
            }
        },
        "materials": {
            "type": "array",
            "minItems": 1,
            "description": "List of materials with their physical properties",
            "items": {
                "$ref": "material_config.json"
            }
        },
        "simulation": {
            "$ref": "simulation_config.json"
        },
        "optimization": {
            "$ref": "optimization_config.json"
        },
        "compute": {
            "$ref": "compute_config.json"
        }
    },
    "required": [
        "name",
        "version",
        "inputs",
        "materials",
        "simulation",
        "optimization",
        "compute"
    ],
    "additionalProperties": false
}

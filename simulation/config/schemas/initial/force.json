{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Force Configuration",
    "version": "1.0.0",
    "description": "Force on the globa like gravity",
    "properties": {
        "gravity": {
            "enabled": {
                "type": "boolean",
                "default": false
            },
            "vector": {
                "type": "array",
                "items": {
                    "type": "number"
                },
                "minItems": 3,
                "maxItems": 3,
                "default": [0, -9.81, 0]
            }
        }
    },
    "required": ["direction", "magnitude"],
    "additionalProperties": false
}

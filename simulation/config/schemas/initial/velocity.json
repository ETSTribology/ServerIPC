{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Velocity Configuration",
    "version": "1.0.0",
    "description": "Initial velocity configuration for the simulation",
    "properties": {
        "velocity": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        }
    },
    "required": ["velocity"],
    "additionalProperties": false
}
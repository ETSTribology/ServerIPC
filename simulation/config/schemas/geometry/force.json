{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Force parameters applied to the mesh",
    "version": "1.0.0",
    "properties": {
        "external_forces": {
            "type": "array",
            "description": "List of external forces applied to the mesh",
            "items": {
                "vector": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 3,
                    "maxItems": 3,
                    "description": "Direction vector of the force",
                    "default": [0, 0, 0]
                }
            }
        }
    },
    "additionalProperties": false
}

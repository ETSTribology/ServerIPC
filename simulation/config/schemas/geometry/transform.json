{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Transformation Configuration",
    "description": "Configuration schema for geometric transformations in simulation",
    "version": "1.0.0",
    "properties": {
        "scale": {
            "description": "Scale factor",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        },
        "rotation": {
            "type": "object",
            "description": "Rotation configuration",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        },
        "translation": {
            "type": "array",
            "description": "Translation vector",
            "items": {
                "type": "number"
            },
            "minItems": 3,
            "maxItems": 3,
            "default": [0, 0, 0]
        }
    },
    "additionalProperties": false
}

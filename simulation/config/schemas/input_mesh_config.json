{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "path": {
            "type": "string",
            "description": "File path to the mesh used in the simulation",
            "pattern": "^.*\\.(mesh|obj|stl|ply)$"
        },
        "percent_fixed": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Percentage of nodes in the mesh that are fixed in place"
        },
        "material": {
            "type": "string",
            "description": "Name of the material to be applied to this mesh",
            "minLength": 1
        },
        "transform": {
            "$ref": "transform_config.json"
        },
        "force": {
            "$ref": "force_config.json"
        }
    },
    "required": ["path", "percent_fixed", "material", "transform", "force"],
    "additionalProperties": false
}

{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "gRPC Backend Configuration",
    "type": "object",
    "version": "1.0.0",
    "required": ["host", "port", "service", "credentials"],
    "properties": {
        "host": {
            "type": "string",
            "description": "The host address of the gRPC server.",
            "default": "localhost"
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535,
            "description": "The port number of the gRPC server.",
            "default": 50051
        },
        "service": {
            "type": "string",
            "description": "The gRPC service name.",
            "default": "default_service"
        },
        "credentials": {
            "type": "object",
            "required": ["certificate", "privateKey"],
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Indicates whether credentials are enabled."
                },
                "certificate": {
                    "type": "string",
                    "description": "Path to the SSL certificate file.",
                    "default": ""
                },
                "privateKey": {
                    "type": "string",
                    "description": "Path to the private key file.",
                    "default": ""
                }
            },
            "description": "Credentials for establishing a secure gRPC connection.",
            "default": {
                "enabled": false,
                "certificate": "",
                "privateKey": ""
            }
        },
        "ssl": {
            "type": "boolean",
            "description": "Enable SSL for gRPC connection.",
            "default": true
        }
    },
    "additionalProperties": false
}
